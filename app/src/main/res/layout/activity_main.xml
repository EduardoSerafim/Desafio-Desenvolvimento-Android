<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11 912345678"
        android:height="200dp"
        android:textSize="50sp"
        android:gravity="center_horizontal|center_vertical"
        android:background="#D8D4D4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--> fileira 1-3 </!-->


    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="1"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@+id/tvNumero"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:backgroundTint="@color/redfiap"
        android:text="2"
        app:layout_constraintTop_toBottomOf="@+id/tvNumero"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="3"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@+id/tvNumero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <!--> fileira 4-6 </!-->

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="4"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintEnd_toEndOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/button1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="5"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintEnd_toEndOf="@id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="6"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintEnd_toEndOf="@id/button3"
        app:layout_constraintStart_toStartOf="@id/button3"/>

        <!--> fileira 7-9 </!-->

    <Button
        android:id="@+id/button7"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="7"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/button1" />

    <Button
        android:id="@+id/button8"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="8"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintEnd_toEndOf="@id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2" />

    <Button
        android:id="@+id/button9"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="9"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintEnd_toEndOf="@id/button3"
        app:layout_constraintStart_toStartOf="@id/button3"/>


    <!--> fileira * 0 # </!-->
    <Button
        android:id="@+id/buttonAsteristico"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="*"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintEnd_toEndOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/button1" />

    <Button
        android:id="@+id/button0"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="0"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintEnd_toEndOf="@id/button2"
        app:layout_constraintStart_toStartOf="@id/button2"/>

    <Button
        android:id="@+id/buttonSustenido"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="#"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintEnd_toEndOf="@id/button3"
        app:layout_constraintStart_toStartOf="@id/button3"/>


    <!--> LIGAR</!-->

    <Button
        android:id="@+id/buttonLigar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="LIGAR"
        android:backgroundTint="@color/redfiap"
        app:layout_constraintTop_toBottomOf="@id/button0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>